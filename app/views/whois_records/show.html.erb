<pre>
  <%= render partial: 'whois', locals: { json: @whois_record.json,
                                         show_sensitive_data: @show_sensitive_data,
                                         ip_in_whitelist: ip_in_whitelist? } %>
</pre>

<% if !@show_sensitive_data %>
    <%= form_for @whois_record, url: whois_record_path(@whois_record.name), method: :get do |f| %>
        <%= hidden_field_tag 'locale', locale %>
        <div class="recaptcha"><%= recaptcha_tags %></div>
        <br/>
        <%= submit_tag t('.show_sensitive_data_btn'), name: nil %>
    <% end %>
<% end %>

<% if @whois_record.contactable? && @show_sensitive_data %>
    <p>
        <%= link_to t('.contact_owner_btn'),
                    new_contact_request_path({ domain_name: @whois_record.name }) %>
    </p>
<% end -%>
