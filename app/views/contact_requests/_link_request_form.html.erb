<%= form_for(@contact_request) do |f| %>
    <div class="form_area">
        <div class="form_fields">
            <div class="form_field form_field_required">
                <%= f.label t('.email'), nil, for: nil, :class => "form_field_label" %>
                <%= f.text_field :email,
                                  required: false,
                                  autofocus: true,
                                  :class => "form_field_textfield form_field_size_medium" %>
                <% if @contact_request.errors[:email].any? %>
                    <div class="form_field_error">
                        <%= @contact_request.errors[:email].first %>
                    </div>
                <% end %>
            </div>
            <div class="form_field form_field_required">
                <%= f.label t('.name'), nil, for: nil, :class => "form_field_label" %>
                <%= f.text_field :name,
                                 required: true,
                                 :class => "form_field_textfield form_field_size_medium" %>
                <% if @contact_request.errors[:name].any? %>
                    <div class="form_field_error">
                        <%= @contact_request.errors[:name].first %>
                    </div>
                <% end %>
            </div>
            <%= f.hidden_field :whois_record_id %>
        </div>
        <div class="form_submit">
            <%= f.submit t('.submit_btn') %>
        </div>
    </div>
<% end %>