<h1><%= t 'contact_requests.confirmation_email_form' %></h1>

<div class="instructions">
    <p><%= t 'contact_requests.instructions' %>
    <p><%= t 'contact_requests.link_expiration' %>
</div>

<div class="form">
    <%= form_for(@contact_request) do |f| %>
        <%= f.label t('contact_requests.email'), nil, for: nil %><br>
        <%= f.email_field :email, required: true, autofocus: true %><br>

        <%= f.label t('contact_requests.name'), nil, for: nil %><br>
        <%= f.text_field :name, required: true %>

        <%= f.hidden_field :whois_record_id %><br><br>
        <%= f.submit t('.submit_btn') %>
    <% end %>
</div>

<p><%= t 'contact_requests.gdpr_disclaimer_html' %></p>
